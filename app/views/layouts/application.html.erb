<!DOCTYPE html>
<html>
  <head>
    <title>Obversion</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if session[:player_id] %>
      <%= Player.find(session[:player_id]).username %>
      <%= link_to 'logout', accounts_logout_path %>
    <% else %>
      <%= link_to 'login', accounts_path %>
    <% end %>
    <hr>
    <br />
    <%= yield %>
  </body>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <% if flash[:notice] %>
    <script>
      alert("<%= flash[:notice] %>");
    </script>
  <% end %>
</html>
